{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Metrics",
    "description": "Metrics ingestion schema for creating Riemann events",
    "type": "object",
    "properties": {
        "configuration": {
            "type": "object",
            "properties": {
                "mapping_provider": {
                    "type": "string",
                    "enum": [
                        "GSON",
                        "JACKSON",
                        "JAKARTA",
                        "JSON_ORG",
                        "JSON_SMART",
                        "TAPESTRY"
                    ]
                },
                "json_provider": {
                    "type": "string",
                    "enum": [
                        "GSON",
                        "JACKSON",
                        "JAKARTA",
                        "JSON_ORG",
                        "JSON_SMART",
                        "TAPESTRY"
                    ]
                }
            }
        },
        "source": {
            "type": "object",
            "properties": {
                "auth": {
                    "type": "object",
                    "properties": {
                        "type": "string",
                        "enum": [
                            "basic",
                            "truststore",
                            "certificate"
                        ]
                    },
                    "if": { "properties": { "type": { "const": "basic" } } },
                    "then": {
                        "properties": {
                            "username": {
                                "type": "string"
                            },
                            "password": {
                                "type": "string"
                            }
                        }
                    },
                    "else": {
                        "properties": {
                            "location": {
                                "type": "string"
                            }
                        }
                    }
                },
                "type": {
                    "type": "string"
                },
                "uri": {
                    "type": "string"
                }
            }
        },
        "metrics": {
            "type": "array",
            "prefixItems": [
                {
                    "type": "object",
                    "properties": {
                        "namespace": {
                            "type": "string"
                        },
                        "path": {
                            "type": "string"
                        },
                        "type": {
                            "$ref": "#/$defs/metric_type"
                        }
                    }
                }
            ]
        }
    },
    "$defs": {
        "metric_type": {
            "type": "object",
            "oneOf": [
                {
                    "properties": {
                        "type": "string",
                        "enum": [
                            "STRING",
                            "FLOAT",
                            "DOUBLE",
                            "INT",
                            "BOOLEAN"
                        ]
                    }
                },
                {
                    "properties": {
                        "container": {
                            "type": "string",
                            "enum": [
                                "list",
                                "map"
                            ]
                        },
                        "type": {
                            "$ref": "#/$defs/metric_type"
                        },
                        "suffix_format": {
                            "oneOf": [
                                {
                                    "type": "array",
                                    "prefixItems": [
                                        {
                                            "type": "object",
                                            "properties": {
                                                "template": {
                                                    "type": "string"
                                                },
                                                "from": {
                                                    "type": "int",
                                                    "default": -1
                                                },
                                                "to": {
                                                    "type": "int",
                                                    "default": -1
                                                }
                                            }
                                        }
                                    ]
                                },
                                {
                                    "type": "string"
                                }
                            ]
                        }
                    }
                }
            ]
        }
    }
}