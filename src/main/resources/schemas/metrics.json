{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Metrics",
    "description": "Metrics ingestion schema for creating Riemann events",
    "type": "object",
    "properties": {
        "configuration": {
            "$ref": "#/$defs/configuration"
        },
        "source": {
            "$ref": "#/$defs/source"
        },
        "event_template": {
            "type": "object",
            "additionalProperties": true
        },
        "handler": {
            "type": "string"
        },
        "metrics": {
            "type": "array",
            "prefixItems": [
                {
                    "$ref": "#/$defs/metric"
                }
            ]
        },
        "required": [
            "source",
            "metrics"
        ]
    },
    "additionalProperties": false,
    "$defs": {
        "providers": {
            "enum": [
                "GSON",
                "JACKSON",
                "JAKARTA",
                "JSON_ORG",
                "JSON_SMART",
                "TAPESTRY",
                "CUSTOM"
            ]
        },
        "configuration": {
            "type": "object",
            "properties": {
                "mapping_provider": {
                    "$ref": "#/$defs/providers"
                },
                "json_provider": {
                    "$ref": "#/$defs/providers"
                }
            },
            "additionalProperties": false
        },
        "source_type": {
            "enum": [
                "HTTP",
                "CUSTOM"
            ]
        },
        "http_auth_type": {
            "enum": [
                "BASIC",
                "CERTIFICATE"
            ]
        },
        "http_certificate_type": {
            "enum": [
                "JKS",
                "PKCS12"
            ]
        },
        "http_source": {
            "properties": {
                "auth": {
                    "type": "object",
                    "properties": {
                        "type": {
                            "$ref": "#/$defs/http_auth_type"
                        }
                    },
                    "if": { "properties": { "type": { "const": "BASIC" } } },
                    "then": {
                        "properties": {
                            "username": {
                                "type": "string"
                            },
                            "password": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "username",
                            "password"
                        ]
                    },
                    "else": {
                        "properties": {
                            "location": {
                                "type": "string"
                            },
                            "certificate_type": {
                                "$ref": "#/$defs/http_certificate_type"
                            },
                            "password": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "location",
                            "certificate_type"
                        ]
                    },
                    "required": [
                        "type"
                    ]
                },
                "uri": {
                    "type": "string"
                }
            },
            "required": [
                "auth",
                "uri"
            ]
        },
        "custom_source": {
            "additionalProperties": true
        },
        "source": {
            "type": "object",
            "properties": {
                "type": {
                    "$ref": "#/$defs/source_type"
                },
                "config": {
                    "type": "object",
                    "properties": {
                        "if": {
                            "properties": {
                                "type": {
                                    "const": "HTTP"
                                }
                            }
                        },
                        "then": {
                            "$ref": "#/$defs/http_source",
                            "properties": {
                                "type": {
                                    "$ref": "#/$defs/source_type"
                                }
                            },
                            "unevaluatedProperties": false
                        },
                        "else": {
                            "$ref": "#/$defs/custom_source"
                        }
                    }
                }
            },
            "required": [
                "type"
            ]
        },
        "handler_methods": {
            "type": "object",
            "additionalProperties": {
                "type": "string"
            }
        },
        "metric_structure": {
            "type": "object",
            // TODO: Fix this not matching either branch in oneOf
            "oneOf": [
                {
                    "type": "object",
                    "properties": {
                        "type": {
                            "enum": [
                                "STRING",
                                "FLOAT",
                                "DOUBLE",
                                "INTEGER",
                                "BOOLEAN",
                                "INFER"
                            ]
                        }
                    },
                    "required": [
                        "type"
                    ],
                    "additionalProperties": false
                },
                {
                    "type": "object",
                    "properties": {
                        "type": {
                            "enum": [
                                "LIST",
                                "MAP"
                            ]
                        },
                        "structure": {
                            "$ref": "#/$defs/metric_structure"
                        },
                        "suffixes": {
                            "type": "array",
                            "prefixItems": [
                                {
                                    "$ref": "#/$defs/range_suffix_format"
                                }
                            ]
                        }
                    },
                    "required": [
                        "type"
                    ],
                    "additionalProperties": false
                }
            ]
        },
        "metric": {
            "type": "object",
            "properties": {
                "namespace": {
                    "type": "string"
                },
                "path": {
                    "type": "string"
                },
                "handler_method": {
                    "type": "string"
                },
                "handlers": {
                    "$ref": "#/$defs/handler_methods"
                },
                "structure": {
                    "$ref": "#/$defs/metric_structure"
                }
            },
            "required": [
                "namespace",
                "path",
                "structure"
            ],
            "additionalProperties": false
        },
        "range_suffix_format": {
            "type": "object",
            "properties": {
                "template": {
                    "type": "string"
                },
                "from": {
                    "type": "integer",
                    "default": -1
                },
                "to": {
                    "type": "integer",
                    "default": -1
                }
            },
            "required": [
                "template"
            ],
            "additionalProperties": false
        }
    }
}