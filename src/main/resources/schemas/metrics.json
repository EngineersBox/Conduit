{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Metrics",
    "description": "Metrics ingestion schema for creating Riemann events",
    "type": "object",
    "properties": {
        "configuration": {
            "$ref": "#/$defs/configuration"
        },
        "source": {
            "$ref": "#/$defs/source"
        },
        "metrics": {
            "type": "array",
            "prefixItems": [
                {
                    "$ref": "#/$defs/metric"
                }
            ]
        }
    },
    "$defs": {
        "providers": {
            "type": "string",
            "enum": [
                "GSON",
                "JACKSON",
                "JAKARTA",
                "JSON_ORG",
                "JSON_SMART",
                "TAPESTRY"
            ]
        },
        "configuration": {
            "type": "object",
            "properties": {
                "mapping_provider": {
                    "$ref": "#/$defs/providers"
                },
                "json_provider": {
                    "$ref": "#/$defs/providers"
                }
            }        },
        "source": {
            "type": "object",
            "properties": {
                "auth": {
                    "type": "object",
                    "properties": {
                        "type": "string",
                        "enum": [
                            "basic",
                            "truststore",
                            "certificate"
                        ]
                    },
                    "if": { "properties": { "type": { "const": "basic" } } },
                    "then": {
                        "properties": {
                            "username": {
                                "type": "string"
                            },
                            "password": {
                                "type": "string"
                            }
                        }
                    },
                    "else": {
                        "properties": {
                            "location": {
                                "type": "string"
                            }
                        }
                    }
                },
                "type": {
                    "type": "string"
                },
                "uri": {
                    "type": "string"
                }
            }
        },
        "metric": {
            "type": "object",
            "properties": {
                "namespace": {
                    "type": "string"
                },
                "path": {
                    "type": "string"
                },
                "type": {
                    "$ref": "#/$defs/metric_type"
                }
            }
        },
        "metric_type": {
            "type": "object",
            "oneOf": [
                {
                    "$ref": "#/$defs/primitive_metric"
                },
                {
                    "$ref": "#/$defs/container_metric"
                }
            ]
        },
        "primitive_metric": {
            "properties": {
                "type": "string",
                "enum": [
                    "STRING",
                    "FLOAT",
                    "DOUBLE",
                    "INT",
                    "BOOLEAN"
                ]
            }
        },
        "container_metric": {
            "properties": {
                "container": {
                    "type": "string",
                    "enum": [
                        "LIST",
                        "MAP"
                    ]
                },
                "type": {
                    "$ref": "#/$defs/metric_type"
                },
                "suffix_format": {
                    "oneOf": [
                        {
                            "$ref": "#/$defs/range_suffix_format"
                        },
                        {
                            "$ref": "#/$defs/literal_suffix_format"
                        }
                    ]
                }
            }
        },
        "range_suffix_format": {
            "type": "array",
            "prefixItems": [
                {
                    "type": "object",
                    "properties": {
                        "template": {
                            "type": "string"
                        },
                        "from": {
                            "type": "int",
                            "default": -1
                        },
                        "to": {
                            "type": "int",
                            "default": -1
                        }
                    }
                }
            ]
        },
        "literal_suffix_format": {
            "type": "string"
        }
    }
}