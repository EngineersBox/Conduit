{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Metrics",
    "description": "Metrics ingestion schema for creating Riemann events",
    "type": "object",
    "properties": {
        "configuration": {
            "type": "object",
            "properties": {
                "mapping_provider": {
                    "type": {
                        "enum": [
                            "GSON",
                            "JACKSON",
                            "JAKARTA",
                            "JSON_ORG",
                            "JSON_SMART",
                            "TAPESTRY"
                        ]
                    }
                },
                "json_provider": {
                    "type": {
                        "enum": [
                            "GSON",
                            "JACKSON",
                            "JAKARTA",
                            "JSON_ORG",
                            "JSON_SMART",
                            "TAPESTRY"
                        ]
                    }
                }
            }
        },
        "source": {
            "type": "object",
            "properties": {
                "auth": {
                    "type": "object",
                    "properties": {
                        "type": {
                            "enum": [
                                "basic",
                                "truststore",
                                "certificate"
                            ]
                        }
                    },
                    "if": { "properties": { "type": { "const": "basic" } } },
                    "then": {
                        "properties": {
                            "username": {
                                "type": "string"
                            },
                            "password": {
                                "type": "string"
                            }
                        }
                    },
                    "else": {
                        "properties": {
                            "location": {
                                "type": "string"
                            }
                        }
                    }
                },
                "type": {
                    "type": "string"
                },
                "uri": {
                    "type": "string"
                }
            }
        },
        "metrics": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "namespace": {
                        "type": "string"
                    },
                    "path": {
                        "type": "string"
                    },
                    "type": {
                        "$ref": "/schemas/metric_type"
                    }
                }
            }
        }
    }
}