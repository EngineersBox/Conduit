{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Metrics",
    "description": "Metrics ingestion schema for creating Riemann events",
    "type": "object",
    "properties": {
        "configuration": {
            "$ref": "#/$defs/configuration"
        },
        "source": {
            "$ref": "#/$defs/source"
        },
        "metrics": {
            "type": "array",
            "prefixItems": [
                {
                    "$ref": "#/$defs/metric"
                }
            ]
        },
        "required": [
            "source",
            "metrics"
        ]
    },
    "additionalProperties": false,
    "$defs": {
        "providers": {
            "enum": [
                "GSON",
                "JACKSON",
                "JAKARTA",
                "JSON_ORG",
                "JSON_SMART",
                "TAPESTRY"
            ]
        },
        "configuration": {
            "type": "object",
            "properties": {
                "mapping_provider": {
                    "$ref": "#/$defs/providers"
                },
                "json_provider": {
                    "$ref": "#/$defs/providers"
                }
            },
            "additionalProperties": false
        },
        "auth_type": {
            "enum": [
                "basic",
                "truststore",
                "certificate"
            ]
        },
        "source": {
            "type": "object",
            "properties": {
                "auth": {
                    "type": "object",
                    "properties": {
                        "type": {
                            "$ref": "#/$defs/auth_type"
                        }
                    },
                    "required": [
                        "type"
                    ],
                    "if": { "properties": { "type": { "const": "basic" } } },
                    "then": {
                        "properties": {
                            "username": {
                                "type": "string"
                            },
                            "password": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "username",
                            "password"
                        ]
                    },
                    "else": {
                        "properties": {
                            "location": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "location"
                        ]
                    }
                },
                "type": {
                    "type": "string"
                },
                "uri": {
                    "type": "string"
                }
            },
            "required": [
                "auth",
                "type",
                "uri"
            ],
            "unevaluatedProperties": false
        },
        "metric": {
            "type": "object",
            "properties": {
                "namespace": {
                    "type": "string"
                },
                "path": {
                    "type": "string"
                },
                "type": {
                    "oneOf": [
                        {
                            "$ref": "#/$defs/primitive_metric"
                        },
                        {
                            "$ref": "#/$defs/container_metric"
                        }
                    ]
                }
            },
            "required": [
                "namespace",
                "path",
                "type"
            ],
            "additionalProperties": false
        },
        "primitive_metric": {
            "enum": [
                "STRING",
                "FLOAT",
                "DOUBLE",
                "INT",
                "BOOLEAN"
            ]
        },
        "container_metric": {
            "type": "object",
            "properties": {
                "container": {
                    "enum": [
                        "LIST",
                        "MAP"
                    ]
                },
                "type": {
                    "oneOf": [
                        {
                            "$ref": "#/$defs/primitive_metric"
                        },
                        {
                            "$ref": "#/$defs/container_metric"
                        }
                    ]
                },
                "suffix_format": {
                    "oneOf": [
                        {
                            "type": "array",
                            "prefixItems": [
                                {
                                    "$ref": "#/$defs/range_suffix_format"
                                }
                            ]
                        },
                        {
                            "type": "string"
                        }
                    ]
                }
            },
            "required": [
                "container",
                "type"
            ],
            "additionalProperties": false
        },
        "range_suffix_format": {
            "type": "object",
            "properties": {
                "template": {
                    "type": "string"
                },
                "from": {
                    "type": "integer",
                    "default": -1
                },
                "to": {
                    "type": "integer",
                    "default": -1
                }
            },
            "required": [
                "template"
            ],
            "additionalProperties": false
        }
    }
}