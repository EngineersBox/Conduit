{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Metric Type",
    "description": "Definition of recursively structured metric type description",
    "type": "object",
    "oneOf": [
        {
            "properties": {
                "type": "string",
                "enum": [
                    "STRING",
                    "FLOAT",
                    "DOUBLE",
                    "INT",
                    "BOOLEAN"
                ]
            }
        },
        {
            "properties": {
                "container": {
                    "type": "string",
                    "enum": [
                        "list",
                        "map"
                    ]
                },
                "type": {
                    "$ref": "#"
                },
                "suffix_format": {
                    "oneOf": [
                        {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "template": {
                                        "type": "string"
                                    },
                                    "from": {
                                        "type": "int",
                                        "default": -1
                                    },
                                    "to": {
                                        "type": "int",
                                        "default": -1
                                    }
                                }
                            }
                        },
                        {
                            "type": "string"
                        }
                    ]
                }
            }
        }
    ]
}