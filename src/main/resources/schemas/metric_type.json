{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Metric Type",
    "description": "Definition of recursively structured metric type description",
    "type": "object",
    "oneOf": [
        {
            "properties": {
                "type": {
                    "enum": [
                        "string",
                        "float",
                        "double",
                        "int",
                        "boolean"
                    ]
                }
            }
        },
        {
            "properties": {
                "container": {
                    "enum": [
                        "list",
                        "map"
                    ]
                },
                "type": {
                    "$ref": "#"
                },
                "suffix_format": {
                    "type": "string"
                }
            }
        }
    ]
}