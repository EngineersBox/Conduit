{
    "source": {
        "type": "HTTP",
        "auth": {
            "type": "CERTIFICATE",
            "location": "example/certificate.p12", // TODO: Fix this to use client SSL certs for auth: https://stuff-things.net/2015/09/17/client-certificate-ca-setup-and-signing/
            "certificate_type": "PKCS12",
            "password": "test"
        },
        "uri": "https://localhost:8000/source.json"
    },
    "configuration": {
        "json_provider": "JACKSON",
        "mapping_provider": "JACKSON"
    },
    "event_template": "host:\"Test Service\"\ndescription: \"Some Metric Description\"\nmetric_d: 123.44",
    "handler": "example/compiled/handler.class",
    "metrics": [
        {
            "namespace": "/service/plugin/test_metric",
            "path": "$..book[?(@.price <= $['expensive'])].price",
            "handler_method": "shouldCollectTestMetric",
            "type": {
                "container": "LIST",
                "type": "DOUBLE",
                "suffix_format": [
                    {
                        "template": "/book_{index}",
                        "to": 1
                    },
                    {
                        "template": "/other_book_{index}",
                        "from": 1
                    }
                ]
            }
        },
        {
            "namespace": "/service/core/books_count",
            "path": "$..book.length()",
            "type": "INTEGER"
        }
    ]
}