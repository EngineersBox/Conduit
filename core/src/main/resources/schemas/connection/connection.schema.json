{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "classpath:/schemas/connection/connection.schema.json",
    "title": "Connection",
    "description": "Connection types and attributes for connecting to a metrics source",
    "type": "object",
    "allOf": [
        {
            "if": {
                "properties": {
                    "type": { "const": "HTTP" }
                }
            },
            "then": {
                "properties": {
                    "type": { "const": "HTTP" },
                    "config": {
                        "$ref": "classpath:/schemas/connection/http_connection.schema.json"
                    }
                },
                "required": [
                    "type",
                    "config"
                ],
                "unevaluatedProperties": false,
                "additionalProperties": false
            }
        },
        {
            "if": {
                "properties": {
                    "type": { "const": "JMX" }
                }
            },
            "then": {
                "properties": {
                    "type": { "const": "JMX" },
                    "config": {
                        "$ref": "classpath:/schemas/connection/jmx_connection.schema.json"
                    }
                },
                "required": [
                    "type",
                    "config"
                ],
                "unevaluatedProperties": false,
                "additionalProperties": false
            }
        },
        {
            "if": {
                "not": {
                    "properties": {
                        "type": {
                            "$ref": "#/$defs/connector_types"
                        }
                    }
                }
            },
            "then": {
                "properties": {
                    "type": {
                        "type": "string"
                    }
                },
                "additionalProperties": true
            }
        }
    ],
    "$defs": {
        "connector_types": {
            "type": "string",
            "enum": [
                "HTTP",
                "JMX"
            ]
        }
    }
}