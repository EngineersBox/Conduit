{
	"$schema" : "https://json-schema.org/draft/2020-12/schema",
	"$id" : "classpath:/schemas/metrics.schema.json",
	"title" : "Metrics",
	"description" : "Metrics ingestion schema for creating Riemann events",
	"type" : "object",
	"properties" : {
		"configuration" : {
			"$ref" : "#/$defs/configuration"
		},
		"connection" : {
			"$ref" : "#/$subSchemas/connection"
		},
		"event_template" : {
			"type" : "object",
			"additionalProperties" : true
		},
		"handler" : {
			"type" : "string"
		},
		"metrics" : {
			"type" : "array",
			"prefixItems" : [
				{
					"$ref" : "#/$defs/metric"
				}
			]
		},
		"extensions" : {
			"type" : "object",
			"properties" : { },
			"additionalProperties" : true
		},
		"required" : [
			"source",
			"metrics"
		]
	},
	"additionalProperties" : false,
	"$defs" : {
		"configuration" : {
			"type" : "object",
			"properties" : {
				"mapping_provider" : {
					"type" : "string"
				},
				"json_provider" : {
					"type" : "string"
				}
			},
			"additionalProperties" : false
		},
		"metric_structure" : {
			"oneOf" : [
				{
					"$ref" : "#/$defs/container_metric_structure"
				},
				{
					"$ref" : "#/$defs/primitive_metric_structure"
				}
			]
		},
		"primitive_metric_structure" : {
			"type" : "object",
			"properties" : {
				"type" : {
					"type" : "string",
					"enum" : [
						"STRING",
						"FLOAT",
						"DOUBLE",
						"INTEGER",
						"BOOLEAN",
						"INFER"
					]
				}
			},
			"required" : [
				"type"
			],
			"additionalProperties" : false,
			"unevaluatedProperties" : false
		},
		"container_metric_structure" : {
			"type" : "object",
			"properties" : {
				"type" : {
					"type" : "string",
					"enum" : [
						"LIST",
						"MAP"
					]
				},
				"structure" : {
					"$ref" : "#/$defs/metric_structure"
				},
				"suffixes" : {
					"type" : "array",
					"prefixItems" : [
						{
							"$ref" : "#/$defs/range_suffix_format"
						}
					]
				}
			},
			"required" : [
				"type",
				"structure"
			],
			"additionalProperties" : false
		},
		"metric" : {
			"type" : "object",
			"properties" : {
				"namespace" : {
					"type" : "string"
				},
				"path" : {
					"type" : "string"
				},
				"structure" : {
					"$ref" : "#/$defs/metric_structure"
				},
				"extensions" : {
					"type" : "object",
					"properties" : { },
					"additionalProperties" : true
				}
			},
			"required" : [
				"namespace",
				"path",
				"structure"
			],
			"additionalProperties" : false
		},
		"range_suffix_format" : {
			"type" : "object",
			"properties" : {
				"template" : {
					"type" : "string"
				},
				"from" : {
					"type" : "integer",
					"default" : -1
				},
				"to" : {
					"type" : "integer",
					"default" : -1
				}
			},
			"required" : [
				"template"
			],
			"additionalProperties" : false
		}
	},
	"$subSchemas" : {
		"connection" : {
			"title" : "connection",
			"description" : "Connection types and attributes for connecting to a metrics source",
			"type" : "object",
			"properties" : {
				"type" : {
					"type" : "string"
				}
			},
			"required" : [
				"type"
			],
			"oneOf" : [
				{
					"properties" : {
						"type" : {
							"const" : "HTTP"
						},
						"config" : {
							"$ref" : "#/$subSchemas/connection/$subSchemas/http_connection",
							"unevaluatedProperties" : false
						}
					}
				},
				{
					"properties" : {
						"type" : {
							"const" : "JMX"
						},
						"config" : {
							"$ref" : "#/$subSchemas/connection/$subSchemas/jmx_connection",
							"unevaluatedProperties" : false
						}
					}
				},
				{
					"additionalProperties" : true
				}
			],
			"additionalProperties" : false,
			"$subSchemas" : {
				"http_connection" : {
					"title" : "http_connection",
					"description" : "HTTP connection schema with SSL and context support parameters",
					"type" : "object",
					"properties" : {
						"uri" : {
							"type" : "string"
						},
						"authentication" : {
							"$ref" : "#/$subSchemas/connection/$subSchemas/http_connection/$defs/http_connection_authentication"
						},
						"ssl_context" : {
							"$ref" : "#/$subSchemas/connection/$subSchemas/http_connection/$defs/http_connection_ssl_context"
						},
						"ssl_parameters" : {
							"$ref" : "#/$subSchemas/connection/$subSchemas/http_connection/$defs/http_connection_ssl_parameters"
						},
						"timeout" : {
							"type" : "string"
						},
						"redirect" : {
							"type" : "string"
						},
						"priority" : {
							"type" : "integer"
						},
						"version" : {
							"type" : "string"
						},
						"proxy" : {
							"type" : "string"
						},
						"local_address" : {
							"type" : "string",
							"format" : "ipv4"
						}
					},
					"required" : [
						"uri"
					],
					"additionalProperties" : false,
					"$defs" : {
						"http_connection_authentication" : {
							"type" : "object",
							"properties" : {
								"username" : {
									"type" : "string"
								},
								"password" : {
									"type" : "string"
								}
							},
							"additionalProperties" : false
						},
						"http_connection_ssl_context" : {
							"type" : "object",
							"properties" : {
								"protocol" : {
									"type" : "string"
								},
								"provider" : {
									"type" : "string"
								},
								"key_manager" : {
									"$ref" : "#/$subSchemas/connection/$subSchemas/http_connection/$defs/http_connection_ssl_context_manager"
								},
								"trust_manager" : {
									"$ref" : "#/$subSchemas/connection/$subSchemas/http_connection/$defs/http_connection_ssl_context_manager"
								},
								"secure_random_algorithm" : {
									"type" : "string"
								},
								"secure_random_provider" : {
									"type" : "string"
								}
							},
							"additionalProperties" : false
						},
						"http_connection_ssl_context_manager" : {
							"type" : "object",
							"properties" : {
								"key_store_path" : {
									"type" : "string"
								},
								"key_store_password" : {
									"type" : "string"
								},
								"algorithm" : {
									"type" : "string"
								},
								"provider" : {
									"type" : "string"
								}
							},
							"additionalProperties" : false
						},
						"http_connection_ssl_parameters" : {
							"type" : "object",
							"properties" : {
								"cipher_suites" : {
									"type" : "array",
									"items" : {
										"type" : "string"
									}
								},
								"application_protocols" : {
									"type" : "array",
									"items" : {
										"type" : "string"
									}
								},
								"protocols" : {
									"type" : "array",
									"items" : {
										"type" : "string"
									}
								},
								"want_client_auth" : {
									"type" : "boolean"
								},
								"need_client_auth" : {
									"type" : "boolean"
								},
								"algorithm_constraints" : {
									"type" : "string"
								},
								"endpoint_identification_algorithm" : {
									"type" : "string"
								},
								"use_cipher_suites_order" : {
									"type" : "boolean"
								},
								"enable_retransmissions" : {
									"type" : "boolean"
								},
								"maximum_packet_size" : {
									"type" : "integer"
								},
								"signature_schemes" : {
									"type" : "array",
									"items" : {
										"type" : "string"
									}
								},
								"named_groups" : {
									"type" : "array",
									"items" : {
										"type" : "string"
									}
								}
							},
							"additionalProperties" : false
						}
					}
				},
				"jmx_connection" : {
					"title" : "jmx_connection",
					"description" : "<TODO>",
					"type" : "object",
					"properties" : {
						"authentication" : {
							"$ref" : "#/$subSchemas/connection/$subSchemas/jmx_connection/$defs/jmx_connection_authentication"
						}
					},
					"$defs" : {
						"jmx_connection_authentication" : {
							"type" : "object"
						}
					}
				}
			}
		}
	}
}